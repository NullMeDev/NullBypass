{
  "manifest_version": 3,
  "name": "Secure Extension Template",
  "version": "2.0.0",
  "description": "A secure, privacy-focused browser extension with transparent functionality",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://example.com/*"
  ],
  
  "background": {
    "service_worker": "background-secure.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["https://example.com/*"],
      "js": ["content-secure.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup-secure.html",
    "default_title": "Secure Extension"
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'"
  },
  
  "web_accessible_resources": [],
  
  "externally_connectable": {
    "matches": []
  }
}

